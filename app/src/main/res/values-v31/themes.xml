<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RemindersApp" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Set the status bar and navigation bar to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Set light status bar icons for better visibility on light background -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Android 12+ specific - set system bar colors to match app colors -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>